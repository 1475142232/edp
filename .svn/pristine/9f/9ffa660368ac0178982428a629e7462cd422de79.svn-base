KISSY.add("resource-module/src/resource",function(S){
	function resourceList(){
		var _this = this;
		//获取人员列表
		var _teamId = "";
		this.getresourcelist = function(teamId){
			var add_people = '<a href="javascript:void(0);" id="addpeople" class="addowner" data-toggle="modal"><b>+</b><span>添加成员</span></a>'; 
			$(".myrow").html(add_people);
			_teamId = teamId;
			$.ajax({
	             type: "GET",
	             url: "userController/findUserByTeamId.action?teamId="+teamId,
	             async: true,
	             dataType: "json",
	             success: function(data){
	             	 _this.getListData(data);
	             }
			});
		}
		//人员列表data
		this.getListData = function(data){
			var add = "";
        	var updatename ="";
        	var userrole  ="";
            for(var i=0; i<data.length; i++) {
            	userrole = data[i].userRole;
	    	    if(userrole === "1"){
	    		    updatename = "普通成员";
	    	    }else if(userrole === "2"){
	    		    updatename = "普通管理员";
	    	    }else if(userrole === '3'){
	    		    updatename = "超级管理员";
	    	    }
	           	add+='<div class="owners">';
	           	add+='<a href="javascript:void(0);" id="'+data[i].id+'" class="glyphicon glyphicon-remove"></a>';//X    
	           	add+='<a href="javascript:void(0);" id="users" class="btn-lg glyphicon glyphicon-user"></a>';//icon-user
	           	add+='<div class="people">';
	           	add+='<a href="javascript:void(0);" style="line-height:40px">'+data[i].userName+'</a>';
	           	add+='<a href="javascript:void(0);" style="font-size:12px;color:#666">'+updatename+'</a>';
	           	add+='</div>';
	           	add+='</div>';
	            $("#addpeople").after(add);
	            add = "";
	            }
            //判断权限
            if(userrole === "1"){
                $(".owners>a:first-child").css('display','block');
                //点击X获取ID
                $(".owners>a:first-child").on("click",function(){
                	$("#deleteowner").modal("show");
                	var _id = this.id;
                	//确定删除人员点击事件
                    $("#confirmdelete").on("click",function(){
            			$.ajax({
            	             type: "POST",
            	             url: "userController/delUserByTeamId.action?teamId="+_teamId,
            	             async: true,
            	             dataType: "json",
            	             data:{"id":_id,"teamId":_teamId},
            	             success: function(data){
            	            	 if(data === "0000"){
            	                 	$("#deleteowner").modal("hide");
            	            		//刷新列表-调用加载列表方法
                	            	_this.getresourcelist(_teamId);
            	            	 }
                            }
                   	 	});
            		});
                });
            }else if(userrole === "1" || userrole === "3"){ 
            	//判断--点击查看成员任务信息
            	$("#users,.people").on("click",function(){
    				$("#ownersdetails").css("display","block");
	             	_this.lookOwnerDetails();
    			})
            };
		}
		//查看人员详细信息
		this.lookOwnerDetails = function(){
			$("#users,.people").on("click",function(){
				$("#ownersdetails").css("display","block");
				$.ajax({
		             type: "post",
		             url: "userController/getUser.action",
		             dataType: "json",
		             success: function(data){
		            	 //console.log(data);
		            	 if(data !== null){
		            		 $("#info_UserId").text(data.id);
		            		 $("#info_UserName").text(data.userName);
		            		 $("#info_UserMail").text(data.userMail);
		            	 }else{
		            		 $('#modelInfo').text("查询失败，请联系管理员!");
		            		 $('#myModal').modal('show');
		            	 }
		             },
		             error: function(errorTwon){
		            	 
		             }
		        });
			});
			$("#backlist").on("click",function(){
				$("#ownersdetails").css("display","none");
			})
		}
		
		
		
		
		
		
		//复制粘贴
		$("#copy").on("click",function(){
			var cv = document.getElementById("valueurl");
			cv.select();
			document.execCommand("Copy");
			$("#copyok").html("已复制成功！");
		});
	}
	return resourceList;
},{
	requires : []
});