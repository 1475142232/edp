            }

            rtn.setReturnCode(EDPCodeConstants.SUCCESS_CODE);
            rtn.setReturnInfo(EDPCodeConstants.SUCCESS_MSG);
        }

        log.info("getTheLastFunctionInfoHasBeComfirmedByFunctionIdAndVersion==>end");
        return rtn;
    }

