		dto.setUserDept(user.getUserDept());	
		UserDto userDto=userServiceI.findAllUser(dto);
	  	List<UserDto> UserTree=userDto.getRows();
	    if(!type.equals("2")){     
	        for(int i=0;i<UserTree.size();i++){
	    	   UserTree.get(i).setText(UserTree.get(i).getUserName());
	    	   if(userServiceI.selectUserByRole(id,UserTree.get(i).getId())!=0){
	    		   UserTree.get(i).setChecked(true);
	    	   }
	        }
	    }else{
	    	for(int i=0;i<UserTree.size();i++){
	    		UserTree.get(i).setText(UserTree.get(i).getUserName());
	    		 if(userServiceI.selectUserByProductId(id,UserTree.get(i).getId())!=0){
